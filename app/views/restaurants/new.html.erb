<h1>Create a restaurant</h1>

<div class="container">

  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORY %>
    <%= f.submit "Submit restaurant", class: "btn btn-primary" %>
  <% end %>
</div>
